{
    "name": "Getting Started",
    "version": "1.0",
    "description": "Build an Extension!",
    "manifest_version": 2,

    "background": {
      "scripts": ["background.js"],
      "persistent": false
    },

    "browser_action": {
      "default_popup": "main.html",
      "default_icon": "hello_extensions.png"
    },

    "commands": {
      "_execute_browser_action": {
        "suggested_key": {
          "default": "Ctrl+Shift+F",
          "mac": "MacCtrl+Shift+F"
        },
        "description": "Opens main.html"
      }
    }
}
